<div class="panel panel-borderless">
  <button type='button' class="left-hand todo btn-success glyphicon glyphicon-calendar btn-xs pull-left"> </button>
  <form>
    <div class='para panel-body' id='para<%= paragraph.num %>'>
      <label type='button' class="delete glyphicon glyphicon-remove btn-xs pull-right"> </label>
      <%=raw paragraph.body %>
    </div>
    <div class="input-group tag-field hidden">
      <span class="input-group-addon" id="basic-addon1">#</span>
      <input type="text" class="form-control" placeholder="tags" aria-describedby="basic-addon1">
      <span class="input-group-btn">
        <button class="btn btn-default tag_submit" id="<%= paragraph.id %>" type="submit">Add</button>
      </span>
    </div>
  </form>
</div>
<hr class="pagehr">


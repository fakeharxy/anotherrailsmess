<h1> New Page </h1>

<% @paragraphs.each do |paragraph| %>
  <div class='para' id='para<%= paragraph.num %>'>
    <%=raw paragraph.body %> 
  </div>
<% end %>

<div class="chatbox">
  <textarea id='body' class='form-control' rows='4'> </textarea>
</div>


<script>
$(function() {
  var elast;
  $("#body").keypress(function (e) {
    if(e.which == 13 && elast == 13) {
      $(".chatbox").before("<div class='para' id='para'>" +
        $(this).val().
        replace( /\n/g, '<br/>' ) + "</div>");
      $.post( '/pages/paragraph', { body: $(this).val()
        .replace( /\n/g, '<br/>')});
      $(this).val("");
      e.preventDefault();
    }
    elast = e.which;
  });
});

</script>

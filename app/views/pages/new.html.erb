<h1> New Page </h1>
<div id="chatbox"></div>
<div>
  <textarea id='body' class='form-control' rows='4'> </textarea>
</div>


<script>
$(function() {
  var elast, n = 1;
  $("#body").keypress(function (e) {
    if(e.which == 13 && elast == 13) {
      $("#chatbox").append("<div class='para' id='para" + n + "'>" +
          $(this).val().
          replace( /\n/g, '<br/><br/>' ) + "</div>");
      $.post( '/pages/paragraph', { body: $(this).val(), para: n } );
      $(this).val("");
      e.preventDefault();
      n++;
    }
    elast = e.which;
  });
});

</script>
